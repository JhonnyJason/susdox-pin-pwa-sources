// centerlink styles
#centerlink
    display flex
    width 100%
    height 100%
    align-items: center
    a
        width 100%
        text-align center
        text-decoration: underline
        font-size: 15pt
        color #3366CC
    #date-of-birth-display
        display none
        width: 100%
        text-align: center

#centerlink.code-shown
    #susdox-link
        display none
    #date-of-birth-display
        display block
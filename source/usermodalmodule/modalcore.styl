/*==============================================================================
 User Modal Styles
==============================================================================*/
.usermodal
    position: absolute
    top 0
    left 0
    width: 100%
    height 100%
    background-color alpha(cd-darkblue, 0.7)
    z-index -1
    opacity 0
    transition: opacity 0.3s
    
    .click-catcher
        position: absolute
        top 0
        left 0
        width: 100%
        height 100%

.usermodal.shown
    z-index: 999
    opacity: 1


.modal-container
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    box-sizing: border-box
    background-color white
    width: 90%
    border-radius: 3px
    overflow: hidden

    .modal-header
        display flex
        justify-content: space-between
        align-items: center
        width 100%
        border none
        background-color alpha(cd-darkblue, 0.05)
        box-shadow 0 0 5px 1px alpha(black, 0.2)
        height 55px
    
    .modal-header-title
        padding-left 20px
        padding-top 5px
        font-size: 16pt
        font-weight: bold

    .modal-close-button
        height 30px
        width 30px
        padding-right: 10px

    .modal-content
        padding 20px 20px 30px 20px

    .modal-actions
        display flex
        align-items: center
        gap: 4px
        width 100%
        height 55px
        padding 4px
        box-sizing: border-box
        box-shadow 0 0 5px 1px alpha(black, 0.2)
        background-color alpha(cd-darkblue, 0.05)

        .click-button
            flex-grow 1
            border-radius: 2px
            background-color cd-turquoise
            padding 10px 20px
            color white
            width 100%
            box-sizing: border-box
            text-align: center
            font-size: 15pt
        .click-button:hover
            opacity 0.8


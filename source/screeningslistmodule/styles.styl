// screeningslist styles
#screenings-container
    width 100%
    height 100%

#screeningslist
    width 100%
    height 100%
    padding 15px 0
    box-sizing: border-box
    // background-color rgba(0, 0, 0, 0.2)
    overflow-y: auto
    overflow-x hidden

#screenings-preloader
    display: none
    height 60px
    width 60px
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%,-50%)
    color cd-turquoise

#screenings-container.preload
    #screeningslist
        display none
    #screenings-preloader
        display block

.screening-button
    position relative
    display block
    margin-top 5px
    margin-bottom 5px
    width 100%
    padding 15px
    box-sizing: border-box
    background-color cd-turquoise
    color white
    font-size: 15pt

.screening-description
    padding-right 45px
    position relative
    svg
        position absolute
        right -10px
        top 50%
        transform: translateY(-50%)
        height 40px
        width 40px

.screening-date
    margin-top 12px
    padding-right 45px
    font-size 12pt
    text-align: left

.screening-chevron
    position absolute
    right 0
    top 50%
    transform: translateY(-50%)
    height 45px
    width 45px

.screenings-info
.screenings-error
    padding 45px 20px
    width 100%
    height 100%
    box-sizing: border-box
    text-align: center
    background-image: url("/img/icon.png")
    background-repeat no-repeat
    background-position center
    // filter grayscale(100%)

.screenings-error
    color: cd-darkred

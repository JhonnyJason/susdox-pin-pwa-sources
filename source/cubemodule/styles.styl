// cube styles
/*===================================================================
 Arrow Styles
===================================================================*/
#arrow-left
    position absolute
    top 50%
    left 0
    transform translate(-200%, -50%)
    height 40px
    width 40px
    transition transform 0.3s

#arrow-right
    position absolute
    top 50%
    right 0
    transform translate(200%, -50%)
    height 40px
    width 40px

/*===================================================================*/
.credentials-set
    #arrow-left
        transform translate(0, -50%)
    #arrow-right
        transform translate(0, -50%)


/*===================================================================
 The Cube
===================================================================*/
#cube-frame
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    width: 220px;
    height: 220px;
    perspective: 700px
    // box-shadow 0 0 15px 0 alpha(black, 0.2) 
    filter drop-shadow(0 0 15px alpha(black, 0.2));
    background: transparent

#cube
    position: absolute
    width: inherit
    height: inherit
    transform-style: preserve-3d;
    transform scale(0.84)
    transition transform 01.5s
    background transparent
    
    .side
        width: inherit
        height: inherit
        position: absolute;
        background-color white

    .front  
        transform: rotateY(0deg) translateZ(110px)
    .back
        transform: rotateX(180deg) translateZ(110px)
    .right
        transform: rotateY(90deg) translateZ(110px)
    .left
        transform: rotateY(-90deg) translateZ(110px)
    .top
        transform: rotateX(90deg) translateZ(110px)
    .bottom
        transform: rotateX(-90deg) translateZ(110px)

    #susdox-logo  
        background-image: url("/img/sustsol_logo.png")
        background-size: contain
        background-repeat no-repeat
        background-position center
        width: 90%
        height 90%
        position relative
        top 5%
        left 5%


/*===================================================================*/
.setting-credentials

    #cube
        transform scale(0.84) rotateX(90deg)

/*===================================================================*/
.credentials-set


    // #cube
    //     transform rotateX(-45deg) scale(0.84)
    #cube
        transform scale(0.84) rotateX(180deg)


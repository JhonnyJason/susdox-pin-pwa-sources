// content styles
/*===================================================================*/
#center-preloader
    display: none
    height 60px
    width 60px
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%,-50%)
    color cd-turquoise

#content.preload
    #center-preloader
        // display block
        display none
    #cube-area
        display block
        // display none
    // #link-area
    //     display none
    // #button-area
    //     display none


/*===================================================================*/
#content
    display grid
    grid-template-columns: 1fr
    grid-template-rows: 55% 10% 35%
    position relative
    background-color transparent    
    width 100%
    height 100%
    box-sizing: border-box

    #menu-frame
        position: absolute
        height: 100%
        width 100%
        background-color alpha(cd-darkblue, 0.4)
        z-index -1
        opacity: 0
        transition opacity 0.3s

    #cube-area
        position relative
        width 100%
        height 100%
        overflow: hidden

    #link-area
        width 100%
        height 100%
        overflow: hidden

    #button-area
        width 100%
        height 100%
        overflow: hidden


.menu-on
    #content
        #menu-frame
            opacity 1
            z-index 10

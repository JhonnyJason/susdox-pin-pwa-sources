// content styles

#center-preloader
    display: none
    height 60px
    width 60px
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%,-50%)

#content.preload
    display none
    #center-preloader
        display block


#content
    display grid
    grid-template-columns: 1fr
    grid-template-rows: 55% 10% 35%
    position relative
    background-color transparent    
    width 100%
    height 100%
    box-sizing: border-box

    #menu-frame
        position: absolute
        height: 100%
        width 100%
        background-color alpha(cd-darkblue, 0.4)
        z-index -1
        opacity: 0
        transition opacity 0.3s

    #link-area
        display flex
        width 100%
        height 100%
        align-items: center
        a
            width 100%
            text-align center
            text-decoration: underline
            font-size: 15pt
            color #3366CC



    #logo-area
        position relative
        display flex
        width 100%
        height 100%
        align-items: center
        // border solid 1px cd-darkblue
        overflow: hidden

    #logo-area > *
        position absolute
        top 50%
        left 50%
        height 220px
        width 220px
        transition transform 0.3s

    #arrow-left
        left 0
        transform translate(-200%, -50%)
        height 40px
        width 40px
        transition transform 0.3s

    #arrow-right
        left auto
        transform translate(200%, -50%)
        right 0
        height 40px
        width 40px

    #susdox-logo        
        transform translate(-50%, -50%)
        background-image: url("/img/sustsol_logo.png")
        background-size: contain
        background-repeat no-repeat
        background-position center

    #credentials-frame  
        transform translate(-50%, 65vh)

    #radiologist-logo-frame
        transform translate(-50%, 130vh)


    #button-area
        position: relative
        display flex
        width 100%
        height 100%
        align-items: center
        overflow hidden
        
        #login-preloader
            display none
            background-color transparent
            color cd-turquoise
            width: 50px
            height 50px
            padding 0

    #button-area > *
        position absolute
        top 50%
        left 50%
        background-color: cd-turquoise
        color white
        border-radius: 10px
        width 220px
        box-sizing: border-box
        padding 20px
        font-size 15pt
        text-align: center
        transition all 0.3s

    #login-preloader  
        transform translate(-50%, -50%)

    #add-code-button  
        transform translate(-50%, -50%)

    #accept-button  
        transform translate(-50%, 35vh)

    #code-button  
        transform translate(-50%, 70vh)
        background-color: transparent
        border-radius: 0
        box-sizing: border-box
        padding 0


#content.setting-credentials

    // Button Area
    #add-code-button  
        transform translate(-50%, -52vh)
    #accept-button  
        transform translate(-50%, -50%)
    #code-button  
        transform translate(-50%, 35vh)
    
    // Logo Area Content
    #susdox-logo        
        transform translate(-50%, -97vh)
    #credentials-frame  
        transform translate(-50%, -50%)
    #radiologist-logo-frame  
        transform translate(-50%, 65vh)


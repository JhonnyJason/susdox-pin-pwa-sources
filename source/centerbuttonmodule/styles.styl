// Centerbutton styles
#centerbutton-container
    display flex
    width 100%
    height 100%
    align-items: center

    .click-button
        position relative        
        padding 20px
        // background-color cd-turquoise
        background-color cd-darkblue
        width 100%
        box-sizing: border-box
        text-align center
        font-size: 15pt
        color white
        // color #3366CC

    #centerbutton-right-arrow
        position absolute
        height 25px
        width 25px
        right 15px
        top 50%
        transform translateY(-50%)
        // vertical-align: middle
// confirmationpopup styles
#confirmationpopup-hidden-templates 
    display none

#confirmationpopup
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color alpha(cd-darkblue, 0.7)
    z-index -1
    opacity 0
    transition: opacity 0.3s

#confirmationpopup.shown
    z-index: 666
    opacity: 1

#confirmationpopup-content
    position absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    box-sizing: border-box
    background-color white
    width: 90%
    border-radius: 3px
    overflow: hidden

    #confirmationpopup-header
        width 100%
        padding-top 10px
    #confirmationpopup-close-button
        height 35px
        width 35px
        padding-right: 10px
        margin-left auto
        display block

    #confirmationpopup-message
        display block
        padding 20px
        margin-top 10px
        text-align: center
        font-size: 15pt
    
    #confirmationpopup-birthday-input
        display block
        border solid 1px cd-darkblue
        padding: 7px
        // width 100%
        width 180px
        margin: 20px auto 0 auto
        box-sizing: border-box
        color cd-darkblue
        background-color white
        text-overflow: ellipsis;
        text-align: center

    #confirmationpopup-birthday-input:focus
        padding: 7px
        background-color white

    #confirmationpopup-confirm-button.click-button
        display block
        // width 160px
        margin 20px auto
        border-radius: 10px
        width 180px
        background-color cd-turquoise
        padding 15px
        color white
        box-sizing: border-box
        text-align: center
        font-size: 15pt

    #confirmationpopup-confirm-button.click-button:hover
        opacity 0.8
    #confirmationpopup-confirm-button.click-button.disabled
        opacity 0.6
        pointer-events: none


    #confirmationpopup-user-feedback
        color cd-darkblue
        margin-top 12px
        margin-left: 20px
        margin-right 20px
        text-align: center
        font-size: 10pt
        line-height: 120%
        min-height 35px

    #confirmationpopup-preloader
        width 30px
        height 30px
        margin auto
        padding-top 5px

#confirmationpopup-content.error 
    #confirmationpopup-birthday-input.error
        border solid 1px red
    
    #confirmationpopup-user-feedback
        color red
// codebutton styles
#codedisplay-container > *
    position absolute
    top 50%
    left 50%
    background-color: cd-turquoise
    color white
    border-radius: 10px
    box-sizing: border-box
    width 220px
    font-size 15pt
    text-align: center
    transition all 0.3s

#codedisplay-container.invalid-code > *
    background-color: cd-darkred

#codedisplay-container
    position relative
    width 100%
    padding 0

    #show-code-label  
        padding 20px
        transform translate(-50%, -50%)
        z-index 1
        
    #code-display
        padding 27px 15px
        font-size: 30pt
        line-height: 120%
        width 100%
        transform translate(-50%, -50%) scale(0,0.3)
        z-index -1
        transition transform 0.3s

#codedisplay-container.show-code
    // padding 10px
    
    #show-code-label  
        z-index -1
        
    #code-display
        transform translate(-50%, -50%) scale(1,1)
        z-index 1

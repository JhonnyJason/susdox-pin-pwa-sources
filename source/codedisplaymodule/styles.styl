// codebutton styles
#codedisplay-container
    width 100%

#codedisplay-buttons
    height 80px
    width 100%
    position relative

#codedisplay-buttons > *
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    transition all 0.3s
    background-color: cd-turquoise
    color white
    border-radius: 10px
    width 220px
    box-sizing: border-box
    font-size 15pt
    text-align: center

#invalid-code-info
    display none

#codedisplay-container.invalid-code 
    #codedisplay-buttons > *
        background-color: cd-darkred
    #invalid-code-info
        display block
        color cd-darkred
        font-size 10pt
        padding 10px

#codedisplay-container

    #show-code-label  
        padding 20px
        z-index 1
        
    #code-display
        padding 27px 15px
        font-size: 30pt
        line-height: 120%
        width 100%
        transform translate(-50%, -50%) scale(0,0.3)
        z-index -1

#codedisplay-container.show-code
    
    #show-code-label  
        z-index -1
        
    #code-display
        transform translate(-50%, -50%) scale(1,1)
        z-index 1
